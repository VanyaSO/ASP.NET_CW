@using lesson_11_29.ViewModels
@using Microsoft.AspNetCore.Mvc.TagHelpers

@model lesson_11_29.ViewModels.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<form class="form-inline">
    <label>Выберите компанию:</label>
    <select name="companyId">
        @foreach (CompanyViewModel comp in Model.Companies)
        {
            <option value="@comp.Id">@comp.Name</option>
        }
    </select>
    <input type="submit" />
</form>
<div class="mt-3"></div>
<table class="table">
    @foreach (Phone p in Model.Phones)
    {
    <tr><td>@p.Name</td><td>@p.Manufacturer?.Name</td><td>@p.Price</td></tr>
    }
</table>