@model List<Image>
@foreach (var image in Model)
{
    <div class="bg-light mb-2">
        <div style="width: 300px; height: 250px;">
            <img src="@image.FilePath" alt="" style="width: 100%; height: 100%; object-fit: cover">
        </div>
        <p>@image.Title</p>
        <p>@image.Description</p>
    </div>
}